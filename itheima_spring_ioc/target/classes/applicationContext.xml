                <ref bean="u2"></ref>
            </list>
        </property>
        <!--        userList集合类型注入-->
        <property name="userMap">
            <map>
                <entry key="user1" value-ref="u1"></entry>
                <entry key="user2" value-ref="u2"></entry>
            </map>
        </property>
