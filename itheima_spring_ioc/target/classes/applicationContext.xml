    </bean>

    <bean id="u2" class="com.com.itheima.domain.User">
        <property name="addr" value="@163.com"></property>
        <property name="name" value="163"></property>
    </bean>

    <bean id = "userDao" class="com.com.itheima.dao.impl.UserDaoImpl">
